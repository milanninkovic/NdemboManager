<?xml version='1.0' encoding='utf-8'?>
<widget id="ngenge.ndembo.manager" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>NgeNge Ndembo Manager</name>
    <description>
        NgeNge Ndembo Manager
    </description>
    <author email="support@phonegap.com" href="http://phonegap.com">
        Tippsoft Team
    </author>
    <content src="index.html" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14" />
    <plugin name="cordova-plugin-splashscreen" source="npm" spec="~3.2.1" />
    <plugin name="cordova-plugin-whitelist" source="npm" spec="~1.2.1" />
	<plugin name="cordova-plugin-device" spec="1.1.2"/>
    <platform name="android">
		<splash src="package-assets/splash960.png" density="xhdpi" width="720" height="960" orientation="portrait"/>
		<splash src="package-assets/splash640.png" density="hdpi" width="480" height="640" orientation="portrait"/>
		<splash src="package-assets/splash470.png" density="mdpi" width="320" height="470" orientation="portrait"/>
		<splash src="package-assets/splash426.png" density="ldpi" width="320" height="426" orientation="portrait"/>
		<icon src="package-assets/icon36.png" density="ldpi" width="36" height="36"/>
		<icon src="package-assets/icon48.png" density="mdpi" width="48" height="48"/>
		<icon src="package-assets/icon72.png" density="hdpi" width="72" height="72"/>
		<icon src="package-assets/icon96.png" density="xhdpi" width="96" height="96"/>
    </platform>
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
</widget>
